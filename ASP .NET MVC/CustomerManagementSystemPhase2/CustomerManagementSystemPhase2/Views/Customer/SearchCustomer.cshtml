@model IEnumerable<CustomerManagementSystemPhase2.Models.Customer>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm("Search", "Customer", FormMethod.Get))
    {
        <b> Search by</b> @Html.RadioButton("searchby", "CustomerName", true)<b> Customer Name</b>
        @Html.RadioButton("searchby", "CustomerId") <b> Customer ID</b><br />
        @Html.TextBox("search") <input type="submit" value=" Search" />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pincode)
        </th>
        <th>Action</th>
    </tr>
    @if (Model.Count() == 0)
    {

        <tr>
            <td colspan="5">
                No record found
            </td>
        </tr>
    }
    else
    {

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pincode)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Modify", new { id = item.CustomerID }) |
                    @Html.ActionLink("Details", "CustomerSummary", new { id = item.CustomerID }) |
                    @Html.ActionLink("Delete", "Remove", new { id = item.CustomerID })
                </td>
            </tr>
        }
    }

</table>
<h2>
    @ViewBag.Message
</h2>
