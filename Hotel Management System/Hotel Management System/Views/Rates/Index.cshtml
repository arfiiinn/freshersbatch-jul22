@model IEnumerable<HMS_Data_Access.HMSModels.Rates>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstNightPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtensionPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstNightPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExtensionPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RateId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RateId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-action="Index" asp-controller="Role">HMS Home Page</a>
