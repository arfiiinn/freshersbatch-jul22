@model Hotel_Management_System.Models.UserDetails
@{
    ViewData["Title"] = "UserLogin";
}


<div class="row" style="margin-left:27%;">

    <div class="col-md-6">
        <h2>UserLogin</h2>
        <hr />
        @if (TempData["UserLoginFailed"] != null)
        {
            <p class="alert alert-danger">@TempData["UserLoginFailed"]</p>
        }

        <form asp-action="UserLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="font-weight:bold;">
                <label asp-for="UserID" class="control-label"></label>
                <input asp-for="UserID" class="form-control" />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>

            <div class="form-group" style="font-weight:bold;">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <b> Login As</b><br />
            <hr>        
            @Html.RadioButton("Role", "Owner")<b>&nbsp; Owner</b> &nbsp;
            @Html.RadioButton("Role", "Manager") <b>&nbsp; Manager</b> &nbsp;
            @Html.RadioButton("Role", "Receptionist") <b>&nbsp; Receptionist</b> &nbsp;
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-lg btn-outline-success mt-3" />
                @*<a asp-action="RegisterUser" class="btn btn-info">SignUp</a>*@
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
