            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfNights" class="control-label"></label>
                <input asp-for="NumberOfNights" class="form-control" />
                <span asp-validation-for="NumberOfNights" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestId" class="control-label"></label>
                <select asp-for="GuestId" class="form-control" asp-items="ViewBag.GuestId"></select>
                <span asp-validation-for="GuestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
